{{!--
Це код container файлу для work сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
--}}

<div class="m-3">
    {{#with main}}
    <main>

        {{> title data='Works history' big=true}}
        <div class="p-2">
            {{#each works}}
            <div class="row">
                <div class="card col-6">
                    <div>
                        {{position}}
                    </div>
                    <div>
                        {{duration.from}} -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}}
                        (until now)
                        {{/if}}
                    </div>
                    <div>
                        {{#if company.url includeZero=true}}
                        {{> link text=company.name href=company.url blank=true noLine=true}}
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}
                    </div>
                </div>
            </div>
            <hr class="pb-2">
            <div class="card col-6">
                {{#if projectAmount}}
                <strong> Project: ({{projectAmount}})</strong>
                {{/if}}
                {{#each projects}}
                <button class="btn btn-info col-3 mx-3"> {{> link text=name href=url blank=true
                    noLine=true}}
                </button>
                <q class="m-1"> {{about}} </q>
                <div> Project stacks <em>{{stackAmount}}</em> </div>
                <hr class="p-1">
                <div class="px-5">
                    {{#each stacks}}
                    <li>{{name}}</li>
                    {{/each}}
                </div>
                <em>Project awards</em>
                <hr>
                {{#each awards}}
                <div>{{name}}</div>
                {{/each}}

                {{/each}}
            </div>
            {{/each}}
        </div>

    </main>
    {{/with}}
</div>

