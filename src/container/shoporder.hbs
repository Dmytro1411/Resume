<main class="g-3">
    <div class="row ps-5">
        <section class="col-12 px-1 pt-2">
            <div class="card">
                {{#with navigation}}
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link py-0 {{#if @last includeZero=true}} disabled {{/if}}"
                            href="{{href}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </section>

        <div class="row">
            <h1 class="ps-0 mb-5">{{header}}</h1>

            <section class="col-8">
                <div class="row">
                    {{#with contacts_data}}
                    <div class="card-body">
                        <div class="display-6 mb-3"><b>{{title}}</b></div>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning">
                            {{text}}
                        </button>
                        {{else isOutline}}
                        <button class="btn btn-outline-warning">
                            {{text}}
                        </button>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{#with form}}
                    {{#with input}}
                    {{#each this}}
                    <div class="col-6 px-1">

                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger">{{caption}}</div>
                        </div>

                    </div>
                    {{/each}}
                    {{/with}}
                    <hr>
                    <div>
                        {{#each switch}}
                        <div class="form-check form-switch">
                            {{#if isActive}}
                            <label class="form-check-label">{{text}}</label>
                            <input name="switch" type="checkbox" class="form-check-input">
                            {{else}}
                            <label class="form-check-label">{{text}}</label>
                            <input name="switch" type="checkbox" class="form-check-input">
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                    {{/with}}
                </div>
                <hr>
            </section>
            <section class="col-4 pe-5">
                <div class="pe-5">
                    <div class="row g-0">
                        <div class="card">
                            {{#each action_block}}
                            <div class="card-body p-1">
                                {{#if isSuccess}}
                                <button class="btn btn-success mt-2">{{text}}</button>
                                {{else isDanger}}
                                <button class="btn btn-danger">{{text}}</button>
                                {{else isInfo}}
                                <button class="btn btn-info mb-2">{{text}}</button>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <br>
                <div class="pe-5">
                    <div class="row g-0">
                        <div class="card">
                            {{#with total}}
                            <div class="card-body p-1">
                                <h3 class="card-title"> {{title}} </h3>



                                {{#each item_list}}
                                <div class="display">{{name}}: {{price}}</div>
                                {{/each}}

                                <hr>

                                {{#each additional_info}}
                                <div class="display">{{text}}: {{value}}</div>
                                {{/each}}

                                <hr>

                                {{#with total_price}}
                                <div class="display">{{text}}: {{value}}</div>
                                {{/with}}

                                <hr>

                                {{#each button}}
                                {{#if isPrimary}}
                                <button class="btn btn-primary mb-2">{{text}}</button>
                                {{else isOutline}}
                                <button class="btn btn-outline-primary mb-2">{{text}}</button>
                                {{/if}}
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>

            </section>
            <section class="col-8">

                {{#with delivery}}
                <div class="display-6 mb-3">
                    <b>{{title}}</b>
                </div>

                <div class="card col-12">
                    <div class="row">
                        {{#each select}}
                        <div class="card-body col-6">
                            <label class="form-label">{{label}}</label>
                            <select class="form-select" name="textfield" type="text" value="{{placeholder}}">
                                {{#each options}}
                                <option selected>{{value}} {{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="mt-3">
                    {{#each delivery_type}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input name="type" type="radio" class="form-check-input">
                    </div>
                    {{/each}}
                </div>
                <hr>
                <div class="mt-3">
                    {{#with payment}}

                    <div class="display-6 mb-2"><b>{{title}}</b></div>

                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input name="type" type="radio" class="form-check-input" name="textfield"
                            value="{{description}}">
                    </div>
                    {{/each}}

                    {{/with}}
                </div>
                <div class="col-12">
                    <div class="row">
                        {{#with contact}}

                        <div class="display-6 mb-2"><b>{{title}}</b></div>

                        {{#each this}}
                        <div class="col-6 px-1">
                            <div class="card-body mb-3">
                                <label class="form-label">{{label}}</label>
                                <p class="m-0"><input class="form-control" name="textfield" type="text"
                                        value="{{placeholder}}">
                                </p>
                                <div class="form-text text-danger">{{caption}}</div>
                            </div>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>
                </div>


                {{/with}}


            </section>
        </div>



    </div>
</main>