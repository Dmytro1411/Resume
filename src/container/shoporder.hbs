<main class="g-3">

    <div class="row ms-4">

        <nav class="col-12 px-0 pt-4">
            <div class="card py-2 me-3">
                {{#with navigation}}
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link py-0 {{#if @last includeZero=true}} disabled {{/if}}"
                            href="{{href}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </nav>

        <h1 class="ps-0 my-5">{{header}}</h1>

        <section class="col-8 mt-3">
            <div class=" row">
                {{#with contacts_data}}

                <div class="card-body">
                    <h3>{{title}}</h3>
                    <div class="mb-3">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning">
                            {{text}}
                        </button>
                        {{else isOutline}}
                        <button class="btn btn-outline-warning">
                            {{text}}
                        </button>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>

                {{#with form}}

                <div class="row">
                    {{#with input}}
                    {{#each this}}
                    <div class="col-6 px-1">
                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

                <hr>

                <div>
                    {{#each switch}}
                    <div class="form-check form-switch">
                        {{#if isActive}}
                        <label class="form-check-label">{{text}}</label>
                        <input name="switch" type="checkbox" class="form-check-input">
                        {{else}}
                        <label class="form-check-label">{{text}}</label>
                        <input name="switch" type="checkbox" class="form-check-input">
                        {{/if}}
                    </div>
                    {{/each}}
                </div>

                {{/with}}

                {{/with}}
            </div>
            <hr>

            {{#with delivery}}

            <h3>{{title}}</h3>

            <div class="card col-12">
                <div class="row">
                    {{#each select}}
                    <div class="card-body col-6">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option selected> {{placeholder}}</option>
                            {{#each options}}
                            <option>{{value}} {{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="mt-3">
                {{#each delivery_type}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input name="type" type="radio" class="form-check-input">
                </div>
                {{/each}}
            </div>

            <hr>

            <div class="mt-3 mb-3">
                {{#with payment}}

                <h3>{{title}}</h3>

                {{#each list}}
                <div class="form-check mb-3">
                    <label class="form-check-label">{{type}}</label>

                    <input name="pay" type="radio" class="form-check-input">
                    <div><sub>{{description}}</sub></div>
                </div>
                {{/each}}

                {{/with}}
            </div>

            <hr>

            <div class="mt-3 mb-3">

                {{#with contact}}
                <div class="row">
                    <h3>{{title}}</h3>

                    {{#with surname}}
                    <div class="col-6">
                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with name}}
                    <div class="col-6">
                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with phone}}
                    <div class="col-6">
                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-6">
                        <div class="card-body mb-3">
                            <label class="form-label">{{label}}</label>
                            <p class="m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/with}}
                </div>

                {{/with}}

                <hr>

                {{#with coment}}
                <label class="form-label px-0">{{label}}</label>
                <p class="mb-4 px-0"><input class="form-control px-1" name="textfield" type="text"
                        value="{{placeholder}}">
                </p>
                {{/with}}
                <hr>
            </div>

            {{/with}}

            <div class="row">

                {{#with coupon}}
                <div class="col-8">
                    <h3>{{title}}</h3>
                    {{#with select}}
                    <div>
                        {{#with availabel_coupon}}
                        <label class="form-label mb-0"><sub>{{label}}</sub></label>
                        <select class="form-select mt-0 mb-3">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>{{value}} {{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>
                    <div>
                        {{#with friend_coupon}}
                        <label class="form-label mb-0"><sub>{{label}}</sub></label>
                        <select class="form-select form-select-sm my-0">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option>{{value}} {{text}}</option>
                            {{/each}}
                        </select>
                        <div class="form-text text-danger py-0 mb-3 mt-0">{{placeholder}}</div>
                        {{/with}}
                    </div>
                    {{/with}}
                    {{#with add}}
                    {{#each this}}
                    <div class="col-12">
                        <div class="card-body mb-3">
                            <label class="form-label mb-0"><sub>{{label}}</sub></label>
                            <p class=" m-0"><input class="form-control" name="textfield" type="text"
                                    value="{{placeholder}}">
                            </p>
                            <div class="form-text text-danger"><sup>{{caption}}</sup></div>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr>
                </div>
                {{/with}}

            </div>


            {{#with quiz}}

            <h3> {{title}} </h3>

            <div class="mt-3 mb-3">
                {{#with preference}}

                <div>{{title}}</div>

                {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input name="type" type="radio" class="form-check-input">
                </div>
                {{/each}}
                {{/with}}
            </div>

            <div class="row">
                {{#with your_expirience}}
                <label class="form-label">{{label}}</label>
                <p class="mb-4"><input class="form-control">
                </p>
                {{/with}}
            </div>

            <div class="row">
                {{#with purchase_frequency}}
                <label class="form-label mb-0"><sub>{{label}}</sub></label>
                <select class="form-select my-0">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option>{{value}} {{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
            </div>

            <div class="mt-3 mb-3">
                {{#with factors}}

                <div>{{title}}</div>

                {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input name="type" type="checkbox" class="form-check-input">
                </div>
                {{/each}}
                {{/with}}
            </div>
            {{/with}}
        </section>

        <aside class="col-4">
            <div>
                <div class="row g-0">
                    <div class="card">
                        {{#each action_block}}
                        <div class="card-body p-1">
                            {{#if isSuccess}}
                            <button class="btn btn-success mt-2">{{text}}</button>
                            {{else isDanger}}
                            <button class="btn btn-danger">{{text}}</button>
                            {{else isInfo}}
                            <button class="btn btn-info mb-2">{{text}}</button>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <br>
            <div>
                <div class="row g-0">
                    <div class="card">
                        {{#with total}}
                        <div class="card-body p-1">
                            <h3 class="card-title"> {{title}} </h3>



                            {{#each item_list}}
                            <div class="display">{{name}}: {{price}}</div>
                            {{/each}}

                            <hr>

                            {{#each additional_info}}
                            <div class="display">{{text}}: {{value}}</div>
                            {{/each}}

                            <hr>

                            {{#with total_price}}
                            <div class="display">{{text}}: {{value}}</div>
                            {{/with}}

                            <hr>

                            {{#each button}}
                            {{#if isPrimary}}
                            <button class="btn btn-primary mb-2">{{text}}</button>
                            {{else isOutline}}
                            <button class="btn btn-outline-primary mb-2">{{text}}</button>
                            {{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </aside>

        <hr class="row col-12 ms-1">

        <footer class="col-12">
            <div class="row">
                {{#each footer}}
                <div class="nav flex-column col-2">
                    {{#each this}}
                    <div class="nav-item">
                        <a class="nav-link px-0 {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>

    </div>

</main>