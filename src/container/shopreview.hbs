<main class="g-3">

    <div class="row mx-4">

        <nav class="col-12 px-0 pt-4">
            <div class="card py-2 me-3">
                {{#with navigation}}
                {{> links}}
                {{/with}}
            </div>
        </nav>

        <section class="col-8 mt-3">
            <div class="row">

                {{#with formBlock}}
                <h1 class="ps-0 mt-5 mb-4">{{header}}</h1>

                {{#with rating}}
                <div class="card-body mb-3">
                    <h3>{{title}}:
                        {{value}}</h3>
                </div>
                {{/with}}

                {{#with actionBlock}}
                <div class="card-body">

                    <div class="nav nav-tabs mb-5">
                        {{#each tabs}}
                        <div class="nav-item mx-1 px-1">
                            <a class="nav-link {{#if isActive}} active {{/if}}" href="#"> {{text}}</a>
                        </div>
                        {{/each}}
                    </div>

                    <hr class="my-5">

                    <div class="card p-3">
                        {{#with report}}
                        <h6 class="mb-3">{{title}}</h6>
                        {{#with button}}
                        <div>
                            <button class="btn btn-success" href="{{link}}">{{text}}</button>
                        </div>
                        {{/with}}
                        {{/with}}
                    </div>

                </div>
                {{/with}}

                <hr class="my-5">

                <div class="col-12">
                    {{#with feedbackBlock}}
                    <div class="card-body">
                        <h2 class="my-5">{{title}}</h2>
                        <div class="my-2">
                            {{#each buttons}}
                            {{#if isWarning}}
                            <button class="btn btn-warning" href="{{link}}">{{text}}</button>
                            {{else isSuccess}}
                            <button class="btn btn-success" href="{{link}}">{{text}}</button>
                            {{else isDanger}}
                            <button class="btn btn-danger" href="{{link}}">{{text}}</button>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                </div>

                {{/with}}

            </div>
        </section>

        <aside class="col-4 mt-4">
            <div class="me-2">
                {{#with formBlock}}
                {{#with goodsInfo}}

                <div class="card">
                    <div class="col-6">
                        <img class="card-img-top m-3" src="{{photo}}">
                        <h5 class="ms-3">{{name}}</h5>
                    </div>
                </div>

                <div class="card mt-3 p-3">
                    <big>
                        <b class="mt-2">
                            {{price}}
                        </b>
                    </big>
                    {{#if inMarket}} Є в наявності {{/if}}
                    <div>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <div class="my-3"><button class="btn btn-primary" href="{{link}}">{{text}}</button></div>
                        {{else isSecondary}}
                        <div><button class="btn btn-secondary" href="{{link}}">{{text}}</button></div>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        {{#with seller}}
                        {{title}}:
                        <b>{{value}}</b>
                        {{/with}}
                    </div>
                </div>

                {{/with}}
                {{/with}}
            </div>
        </aside>

        <section class="col-12 mt-3">
            <div class="row">

                {{#each reviewList}}
                <div class="col-12 p-0">
                    <div class="card mb-5">

                        <ul class="list-group">

                            <li class="list-group-item">
                                {{#with title}}
                                <div>{{userName}}</div>
                                <div class="mb-2">{{caption}}</div>
                                <div>{{date}}</div>
                                {{/with}}
                            </li>

                            {{#with reviewBody}}
                            <li class="list-group-item">


                                {{#with seller}}
                                <div class="mb-3">{{title}}: {{value}}</div>
                                {{/with}}

                                {{#with rating}}
                                <div>{{title}}: {{value}}</div>
                                {{/with}}

                                {{#each text}}
                                <blockquote class="my-3"> {{this}} </blockquote>
                                {{/each}}

                                <div class="my-3">
                                    {{#with advantages}}
                                    <b>{{title}}:</b>
                                    <div>{{text}}</div>
                                    {{/with}}
                                </div>

                                <div class="mt-3 mb-2">
                                    {{#with disadvantages}}
                                    <b>{{title}}:</b>
                                    <div>{{text}}</div>
                                    {{/with}}
                                </div>

                                <div class="row">
                                    {{#each images}}
                                    <div class="col-2">
                                        <img class="card-img-top m-3" src="{{this}}">
                                    </div>
                                    {{/each}}
                                </div>

                            </li>

                            {{#each coments}}
                            <div class="p-3">
                                <div class="card p-2">
                                    <h5>{{userName}}</h5>
                                    <p>{{date}}</p>
                                    {{text}}
                                </div>
                            </div>
                            {{/each}}

                            {{/with}}
                        </ul>
                    </div>
                </div>
                {{/each}}

            </div>
        </section>

        <section>
            {{#with service}}
            <div class="col-12">
                <div class="row">
                    <div class="card text-bg-success text-center">
                        <h2 class="mt-3 mb-4">{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <div class="my-2">
                            <button class="btn btn-primary" href="{{link}}">{{text}}</button>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
        </section>

        <hr class="my-5">

        <footer class="col-12">
            <div class="row">
                {{#each footer}}
                <div class="nav flex-column col-2">
                    {{#each this}}
                    <div class="nav-item">
                        <a class="nav-link px-0 {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </footer>

    </div>



</main>