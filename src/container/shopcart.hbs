<main class="g-3">

    <div class="ms-5 me-5">

        <nav class="col-12 pt-4">
            <div class="row">
                <div class="card py-2">
                    {{#with navigation}}
                    <div class="nav">
                        {{#each links}}
                        <div class="nav-item">
                            <a class="nav-link py-0 {{#if @last includeZero=true}} disabled {{/if}}"
                                href="{{href}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </nav>

        <section class="mt-3">
            {{#each goodsBlock}}
            <div class="col-12 my-3">
                <div class="row">
                    <div class="card">
                        <div class="card-body ms-1">
                            <div class="row">
                                <div class="col-2">
                                    <img class="card-img-top" src="{{image}}">
                                </div>
                                <div class="col-5 pt-3">

                                    <h3 class="pt-4">{{name}}</h3>
                                    <div>
                                        {{description}}
                                    </div>
                                </div>
                                <div class="col-2 pt-3">
                                    {{#with price}}
                                    <div class="pt-4">{{title}}</div>
                                    <h3>{{value}}</h3>
                                    {{/with}}
                                </div>
                                <div class="col-1 pt-5">
                                    <div class="pt-3">
                                        <big>{{amount}}</big>
                                    </div>
                                </div>
                                <div class="col-2 pt-3">
                                    {{#each buttons}}
                                    <div class="text-end pe-2 my-4">
                                        {{#if isPrimary}}
                                        <button class="btn btn-primary">{{text}}</button>
                                        {{else isDanger}}
                                        <button class="btn btn-danger">{{text}}</button>
                                        {{/if}}
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </section>

        <hr class="col-12 ms-0 me-1 my-5">

        <section>
            <div class="col-12">
                <div class="row">
                    {{#with total}}
                    <h3>{{title}}</h3>
                    <h2 class="mt-2 mb-3">{{amount}}</h2>
                    <div class="mb-4">{{delivery}}</div>
                    {{#each buttons}}
                    <div class="my-2">
                        {{#if isSuccess}}
                        <a class="btn btn-success" href="{{link}}">{{text}}</a>
                        {{else isOutline}}
                        <a class="btn btn-outline-success" href="{{link}}">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </section>

        <hr class="col-12 ms-0 me-1 my-5">

        <section>
            <div class="col-12">
                <div class="row">
                    {{#with goodsOtherBlock}}
                    <div class="display-6 text-center mb-3"><b>{{title}}</b></div>
                    {{#each cards}}
                    <div class="col-4 g-1">
                        <div class="card">
                            <img class="card-img-top" src="{{image}}">
                            <div class="card-body m-0 p-2">
                                <h6 class="card-title"> {{title}}
                                    {{#if isHot}}
                                    <div class="badge text-bg-warning rounded-pill">Hot</div>
                                    {{/if}}
                                    {{#if idNew}}
                                    <div class="badge text-bg-info rounded-pill">New</div>
                                    {{/if}}
                                </h6>
                                <q>{{description}}</q>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </section>

        <hr class="col-12 ms-0 me-1 my-5">

        <section>
            {{#with subscribe}}
            <div class="col-12">
                <div class="row">
                    <div class="card text-bg-dark">
                        <h2 class="mt-3">{{header}}</h2>
                        <p class="text-capitalize">{{description}}</p>
                        {{#each buttons}}
                        <div class="my-2">
                            <button class="btn btn-primary" href="{{link}}">{{text}}</button>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
        </section>

        <hr class="col-12 ms-0 me-1 my-5">

        <footer>
            <div class="col-12">
                <div class="row">
                    {{#each footer}}
                    <div class="nav flex-column col-2">
                        {{#each this}}
                        <div class="nav-item">
                            <a class="nav-link px-0 {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </footer>

    </div>

</main>