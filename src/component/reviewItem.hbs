<section class="col-12 mt-3">
    <div class="row">

        {{#each reviewList}}
        <div class="col-12 p-0">
            <div class="card mb-5">

                <ul class="list-group">

                    <li class="list-group-item">
                        {{#with title}}
                        <div>{{userName}}</div>
                        <div class="mb-2">{{caption}}</div>
                        <div>{{date}}</div>
                        {{/with}}
                    </li>

                    {{#with reviewBody}}
                    <li class="list-group-item">


                        {{#with seller}}
                        <div class="mb-3">{{title}}: {{value}}</div>
                        {{/with}}

                        {{#with rating}}
                        <div>{{title}}: {{value}}</div>
                        {{/with}}

                        {{#each text}}
                        <blockquote class="my-3"> {{this}} </blockquote>
                        {{/each}}

                        <div class="my-3">
                            {{#with advantages}}
                            <b>{{title}}:</b>
                            <div>{{text}}</div>
                            {{/with}}
                        </div>

                        <div class="mt-3 mb-2">
                            {{#with disadvantages}}
                            <b>{{title}}:</b>
                            <div>{{text}}</div>
                            {{/with}}
                        </div>

                        <div class="row">
                            {{#each images}}
                            <div class="col-2">
                                <img class="card-img-top m-3" src="{{this}}">
                            </div>
                            {{/each}}
                        </div>

                    </li>

                    {{#each coments}}
                    <div class="p-3">
                        <div class="card p-2">
                            <h5>{{userName}}</h5>
                            <p>{{date}}</p>
                            {{text}}
                        </div>
                    </div>
                    {{/each}}

                    {{/with}}
                </ul>
            </div>
        </div>
        {{/each}}

    </div>
</section>